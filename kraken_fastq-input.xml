<tool id="kraken_fastq-input" name="Classify fastq files with kraken" version="0.1.0">
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <requirements>
        <requirement type="package" version="0.10.3-beta">Kraken</requirement>
    </requirements>
    <command><![CDATA[
        kraken --db $DBNAME --fastq-input $input1  > $output1
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="fq" />
    </inputs>
    <outputs>
        <data name="output1" format="txt" from_work_dir="classified_seqs.txt" />
    </outputs>
    <help><![CDATA[
        Indicate that input is FASTQ, not FASTA format
    ]]></help>
</tool>