<tool id="kraken_classified_out" name="Print classified sequences out to filename" version="0.1.0">
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <requirements>
        <requirement type="package" version="0.10.3-beta">Kraken</requirement>
    </requirements>
    <command><![CDATA[
        kraken --db $DBNAME --classified-out $FILENAME $input1
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="fa" />
    </inputs>
    <outputs>
        <data name="output1" format="txt" from_work_dir="onlyclassified_seqs.txt" />
    </outputs>
    <help><![CDATA[
        Classified sequences can be sent to a file for later processing (exclude all unclassified sequences from the output)
    ]]></help>
</tool>